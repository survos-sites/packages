{% block xxstylesheets %}
    {{ parent() }}
    <style>
        .container {
            display: grid;
            grid-template-columns: 350px 1fr;
            gap: 1rem;
        }

        aside {
            min-height: 100vh;
            justify-content: space-between;
            flex-direction: column;
        }
    </style>
{% endblock %}

{% block body %}


    {% set _sc = 'insta' %} {#  for loading hits #}
    {% set _sc_modal = 'debug_dialog' %} {#  for the debugger #}
    {#        {{ stimulus_controller(_sc_modal) }}#}
    {% set globals = {
        serverUrl: server,
        serverApiKey: apiKey,
        indexName: indexName,
        _sc_modal: _sc_modal,
        debug: app.request.get('debug', false)
    } %}
    {% set icons = {
        json: ux_icon('si:json-duotone'),
        bug: ux_icon('tabler:bug'),
    } %}

    <div {{ stimulus_controller(_sc, {
            serverUrl: server,
            serverApiKey: apiKey,
            indexName: indexName,
            globalsJson: globals|json_encode,
            iconsJson: icons|json_encode,
            templateUrl: path('app_template', {indexName: indexName})
        }) }}
        class="container-fluid py-4"
    >
        <div class="w-100">
            <div class="row g-4">
                <div class="col-lg-3">
                    <div class="card insta-side-panel">
                        <div class="p-3">
                            <div class="d-flex align-items-center mb-4">
                                <h4 class="card-title fs-5 flex-grow-1 fw-bold mb-0">Insta</h4>
                                <a href="#!" class="flex-shrink-0">Reset All</a>
                            </div>
                            <aside class="col-12 col-md-12 mb-4"
                                {{ stimulus_target(_sc, 'refinementList') }}
                            >
                                {% for attr in facets %}
                                    <div class="mb-4">
                                        <h5 class="sub-title mb-2 fw-medium">{{ attr }}</h5>
{#                                        {{ dump(related[attr]|default([])|json_encode) }}#}
                                        <div
                                            data-lookup="{{ related[attr]|default({})|json_encode }}"
                                            data-attribute="{{ attr }}"
                                        ></div>
                                    </div>
                                {% endfor %}
                            </aside>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="insta-list">
                        {{ server }}
                        {# Sidebar: search + filters #}
                        <div class="mb-3" {{ stimulus_target(_sc, 'searchBox') }}></div>
                        {# Main: hits + pagination #}
                        <main
                            {{ stimulus_controller(_sc_modal, {
                                serverUrl: server,
                                serverApiKey: apiKey,
                                indexName: indexName,
                                globalsJson: globals|json_encode,
                            }) }}
                        >

                            <div {{ stimulus_target(_sc_modal, 'modal') }}
                            >
                                {# all them templates use this modal #}
                                {{ include('_modal.html.twig', {_sc_modal: _sc_modal}) }}
                            </div>

                            <div {{ stimulus_target(_sc, 'hits') }}>

                            </div>
                            <div class="mt-4" {{ stimulus_target(_sc, 'pagination') }}></div>

                        </main>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
