{% set official = hit %}
{% set name = hit.name %}

<b>{{ hit['name.official_full'] }}
    ({{ hit['currentParty'] }} - {{ official.state }})</b>

<div>
    {{ hit.wikiData.description|default('') }}
</div>
<i>
    {{ official.imageCount }} Image(s)
</i>
<code>{{ hit.marking }}</code>
<button
    {{ stimulus_action(_sc_modal|default('debug_dialog'), 'modal') }}
    data-hit-id="{{ official.id }}"
    class="btn btn-sm btn-outline-primary">
    {{ icons.json }}
</button>

{% if hit.originalImageUrl %}
<img class="img-thumbnail" src="{{ hit.originalImageUrl }}" />
{% endif %}

<ul>
    {% for code, imageData in hit.imageCodes %}
        {% for filter, size in imageData %}
