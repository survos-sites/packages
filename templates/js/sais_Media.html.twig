
{% set _sc = 'reveal' %}

<div class="card h-100">
    <div class="card-header d-flex justify-content-between align-items-center">
            <span class="fs-3">{{ hit._highlightResult.title.value }}</span>
        {{ hit.year }}

    </div>

    <div class="card-body">
        {% set video = hit %}
        <img src="{{ hit.thumbnailUrl }}" />
        <div class="blockquote">
            {{ hit._highlightResult.description.value }}
        </div>
        {{ hit.originalUrl }}

        {% for size, resized in hit.resized|default([]) %}
            <li>
                <b>{{ size }}</b>
                <img style="max-width: 100px" src="{{ resized }}" alt="{{ resized }}"/>
            </li>r
        {% endfor %}

    </div>

    <div class="card-footer clearfix d-flex float-end justify-content-end">
        <a href="{{ hit.originalUrl }}" target="_blank" class="btn-outline-blue">
            {{ hit.originalUrl }}
        </a>
        <code>{{ hit.marking }}</code>
        <button
            {{ stimulus_action(_sc_modal|default('debug_dialog'), 'modal') }}
            data-hit-id="{{ hit.id }}"
            class="float-end btn btn-sm btn-outline-primary">
            {{ icons.json }}
        </button>
    </div>
</div>




